{
  "version": "0.1.0",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org",
      "ignoreChanges": ["**/*.md", "**/*.test.ts", "**/*.test.tsx", "**/stories/**"]
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  }
} 